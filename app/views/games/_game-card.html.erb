<div
  class="flex gap-12 rounded-2xl px-3 py-5 bg-white mb-2 shadow-sm hover:shadow-md transition-all duration-300 hover:-translate-y-1"
>
  <div class="image h-52 w-80 md:w-40">
    <%= image_tag object.cover_image, class:"h-full w-full" %>
  </div>
  <div class="details flex-col gap-16 md:flex-row">
    <div>
      <h2
        class="text-4xl capitalize self-start text-cyan-900 hover:text-cyan-600"
      >
        <%= link_to object.title, object %>
      </h2>
      <p class="mt-3 text-gray-800">
        <%= truncate(object.description, length: 80) %>
      </p>
      <p class="text-gray-700 mt-4">
        Production company: <%= object.production_company %>
      </p>
    </div>
    <div class="flex justify-center items-center pt-5">
      <p
        class="rounded-full bg-cyan-500 mt text-white h-12 w-12 font-extrabold text-center grid content-center"
      >
        7
      </p>
    </div>
  </div>
</div>
