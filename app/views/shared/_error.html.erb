<% if object.errors.any? %>
<div class="bg-white p-4 mb-3 border border-red-500 bg-yellow-100">
    
    <h3 class="text-xl text-gray-700">Please correct the following: <%= object.errors.count %> fields before submitting</h3>
    <ul>
    
        <% object.errors.full_messages.each do |error| %>
        <li class="text-red-500"><%= error %></li>
        <% end %>
    </ul>
</div>

<% end %>