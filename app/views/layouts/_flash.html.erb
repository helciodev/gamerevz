<% if flash[:notice] %>
<div
  class="sticky right-0 top-0 p-4 text-white shadow-sm rounded-sm bg-green-600 text-center"
>
  <%= flash[:notice] %>
</div>
<% end %>
<!-- prettier-ignore -->
<% if flash[:alert] %>
<div class="sticky right-0 p-4 text-white shadow-sm rounded-sm bg-red-600">
  <%= flash[:alert] %>
</div>
<% end %>
