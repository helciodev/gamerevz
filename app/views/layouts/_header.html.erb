<header
  id="top"
  class="w-full flex flex-col fixed sm:relative bg-black pin-t pin-r pin-l top-0"
>
  <nav
    id="site-menu"
    class="flex flex-col sm:flex-row w-full justify-between items-center px-4 sm:px-6 py-1 bg-black shadow sm:shadow-none border-t-4 border-cyan-500"
  >
    <div
      class="w-full sm:w-auto self-start sm:self-center flex md:gap-16 flex-row sm:flex-none flex-no-wrap justify-between items-center"
    >
      <%= link_to image_tag("gamerevz-logo.png"), root_path %>
      <div>
        <%= link_to 'Add Game', new_game_path, class:"text-white font-bold
        hover:text-cyan-500 text-lg w-full no-underline sm:w-auto sm:px-4 py-2
        sm:py-1 sm:pt-2" %> <%= link_to 'Users', users_path, class:"text-white
        font-bold hover:text-cyan-500 text-lg w-full no-underline sm:w-auto
        sm:px-4 py-2 sm:py-1 sm:pt-2" %>
      </div>
      <button
        id="menuBtn"
        class="hamburger block sm:hidden focus:outline-none"
        type="button"
        onclick="navToggle();"
      >
        <span class="hamburger__top-bun bg-white"></span
        ><span class="hamburger__bottom-bun"></span>
      </button>
    </div>
    <div
      id="menu"
      class="w-full sm:w-auto self-end sm:self-center sm:flex flex-col sm:flex-row items-center h-full py-1 pb-4 sm:py-0 sm:pb-0 hidden"
    >
      <%= link_to 'Login', "#", class:"text-white font-bold hover:text-cyan-500
      text-lg w-full no-underline sm:w-auto sm:px-4 py-2 sm:py-1 sm:pt-2" %>
      <!-- prettier-ignore -->
      <%= link_to 'Sign Up', new_user_path,
      class:"text-white font-bold hover:text-cyan-500 text-lg w-full
      no-underline sm:w-auto sm:px-4 py-2 sm:py-1 sm:pt-2" %> >
    </div>
  </nav>
</header>
